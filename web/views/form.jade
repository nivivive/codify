doctype html
html.no-js(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Natural Language Form
    meta(name="description", content="Natural Language Form with custom text input and drop-down lists")
    meta(name="keywords", content="Natural Language UI, sentence form, text input, contenteditable, html5, css3, jquery")
    link(rel="stylesheet", type="text/css", href="/stylesheets/form2/default.css")
    link(rel="stylesheet", type="text/css", href="/stylesheets/form2/component.css")
    script(src="/js/modernizr.custom.js")
  body.nl-blurred
    .container.demo-1
      .main.clearfix
        form#nl-form.nl-form(name="form", action="request-translate", method="post")
          | I want to translate
          input(name="project", id="project", type="text", value="", placeholder="title of project ", data-subline="For example: <em>Twitter API</em> or <em>Scrabble Code</em>")
          |  from 
          select(name="fromlang", id="fromlang")
            option(value="1", selected="") Java
            option(value="2") Javascript
            option(value="3") Python
            option(value="4") Ruby
            option(value="2") C
          br
          | into 
          select(name="tolang", id="tolang")
            option(value="1", selected="") Python
            option(value="2") Javascript
            option(value="3") Java
            option(value="4") Ruby
            option(value="2") C
          |.
          .nl-submit-wrap
            button.nl-submit(type="submit") Next Step
          .nl-overlay
    // /container
    script(src="/js/nlform.js")
    script(src="/js/form2.js")
